[DEFAULT]
bomversion = @VERSION@.redhat-1

[com.redhat.rcm-openshift-elasticsearch-plugin-bom]
scmurl = git://git.app.eng.bos.redhat.com/openshift-elasticsearch-plugin.git?bom#@MEAD_HASH@
properties = version.suffix=redhat-1

[io.fabric8.elasticsearch-openshift-elasticsearch-plugin]
scmurl = git://git.app.eng.bos.redhat.com/openshift-elasticsearch-plugin.git#@CODE_HASH@
buildrequires = com.redhat.rcm-openshift-elasticsearch-plugin-bom
properties = dependencyManagement=com.redhat.rcm:openshift-elasticsearch-plugin-bom:%(bomversion)s
             skipTests
             version.suffix=redhat-1

[openshift-elasticsearch-plugin]
type = wrapper
scmurl = git://pkgs.devel.redhat.com/rpms/openshift-elasticsearch-plugin.git#b9cb4c788e6f8a3d2e3437eca9dbcbc8eb7bd8fc
buildrequires = io.fabric8.elasticsearch-openshift-elasticsearch-plugin
